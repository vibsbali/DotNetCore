@model OdeToFood.ViewModels.HomePageViewModel

@{
    ViewBag.Title = "Home";
}

<h1>Welcome!</h1>
<div>
    <table>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Id</td>
                <td>@restaurant.Name</td>
                @*<td>@Html.ActionLink("View Details", "Details", new {id = restaurant.Id})</td>*@
                <td><a asp-controller="Home" asp-action="Details" asp-route-id="@restaurant.Id">View Details</a></td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@restaurant.Id">Edit</a></td>
            </tr>
        }
    </table>
</div>

<a asp-controller="Home" asp-action="Create">Create</a>

@section footer{
    <h3>@Model.CurrentGreeting</h3>
}
